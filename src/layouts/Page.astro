---
export interface Props {
  title: string;
  bg?: string;
}

const { title, bg = "bg-background" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class={`w-screen h-screen overflow-auto flex items-center justify-center font-dm ${bg}`}
  >
    <div class="w-page flex items-center justify-start flex-col">
      <slot />
    </div>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=DM+Sans&display=swap");
</style>
