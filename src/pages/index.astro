---
import Link from "../components/Link.svelte";
import Page from "../layouts/Page.astro";
---

<Page title="Home">
  <div
    id="home"
    class="grid grid-cols-2 grid-rows-2 w-[35rem] h-80 gap-1 bg-primary bg-opacity-50"
  >
    <div class="box rounded-br-3xl hover:mb-1 hover:mr-1 transition-all">
      <Link
        href="/story"
        client:load
        styles="w-full h-full items-center justify-center text-xl text-onBackground hover:scale-125 transition-transform"
      >
        My story
      </Link>
    </div>
    <div class="box rounded-bl-3xl hover:mb-1 hover:ml-1 transition-all">
      <Link
        href="/work"
        client:load
        styles="w-full h-full items-center justify-center text-xl text-onBackground hover:scale-125 transition-transform"
      >
        My work
      </Link>
    </div>
    <div class="box rounded-tr-3xl hover:mt-1 hover:mr-1 transition-all">
      <Link
        href="/socials"
        client:load
        styles="w-full h-full items-center justify-center text-xl text-onBackground hover:scale-125 transition-transform"
      >
        My socials
      </Link>
    </div>
    <div class="box rounded-tl-3xl hover:mt-1 hover:ml-1 transition-all">
      <Link
        href="/skills"
        client:load
        styles="w-full h-full items-center justify-center text-xl text-onBackground hover:scale-125 transition-transform"
      >
        My skills
      </Link>
    </div>
  </div>
</Page>

<style lang="scss" scoped>
  .box {
    @apply bg-background p-1 overflow-hidden;

    astro-island {
      button {
        @apply w-full h-full flex items-center justify-center text-xl text-onBackground hover:scale-125 transition-transform;
      }
    }
  }
</style>

<script>
  const buttons = document.querySelectorAll(".box>button");

  for (const button of buttons) {
    (button as HTMLElement).onclick = () => {
      console.log("registered");
      setTimeout(() => {
        window.location.assign((button as HTMLElement).dataset.url!!);
      }, 500);
    };
  }
</script>
