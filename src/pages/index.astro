---
import Page from "../layouts/Page.astro";
---

<Page title="Home">
  <div
    id="home"
    class="grid grid-cols-2 grid-rows-2 w-[35rem] h-80 gap-1 bg-primary bg-opacity-50"
  >
    <div class="box rounded-br-3xl">
      <a href="/smth">My story</a>
    </div>
    <div class="box rounded-bl-3xl">
      <a href="/smth">My work</a>
    </div>
    <div class="box rounded-tr-3xl">
      <a href="/smth">My skills</a>
    </div>
    <div class="box rounded-tl-3xl">
      <a href="/smth">My socials</a>
    </div>
  </div>
</Page>

<style lang="scss" scoped>
  .box {
    @apply bg-background p-1 overflow-hidden;

    a {
      @apply w-full h-full flex items-center justify-center text-xl text-onPrimary hover:translate-x-1 hover:translate-y-1 hover:scale-110 transition-transform;
    }

    &::after {
      content: "";
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      inset: 0px;
      border-radius: 0.5rem;
      background: radial-gradient(
        10rem circle at var(--x) var(--y),
        rgba(255, 255, 255, 0.25),
        transparent 50%
      );
      opacity: 0;
      display: none;
      z-index: 2;
      transition: opacity 0.4s ease;
    }

    &:hover:after {
      opacity: 1;
    }
  }
</style>

<script>
  const home = document.querySelector("#home")!!;
  const boxes = document.querySelectorAll(".box");

  home.addEventListener("pointermove", (_event) => {
    boxes.forEach((_box) => {
      const event = _event as PointerEvent;
      const box = _box as HTMLElement;
      const rect = box.getBoundingClientRect();
      box.style.setProperty("--x", `${event.clientX - rect.left}px`);
      box.style.setProperty("--y", `${event.clientY - rect.top}px`);
    });
  });
</script>
